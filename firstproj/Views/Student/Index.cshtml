@model IEnumerable<firstproj.Models.Student>

<div class="container">
    <h1 class="text-center">Students Management System - Student List</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Faculty</th>
                <th>Roll Number</th>
                <th>Actions</th> <!-- New column for actions -->
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                    <td>@student.Faculty</td>
                    <td>@student.RollNO</td>
                    <td>
                        <!-- Update Button -->
                        <a href="@Url.Action("Edit", "Student", new { id = student.Id })" class="btn btn-primary">Edit</a>

                        <!-- Delete Button -->
                        <form action="@Url.Action("Delete", "Student", new { id = student.Id })" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this student?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
